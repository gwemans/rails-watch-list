<h1><%= @list.name %></h1>


<%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-primary my-3" %>

<div>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %> - <%= link_to 'Delete movie', list_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete '#{bookmark.movie.title}'?"}%></li>
  <% end %>
</div>

<%= link_to "Back to Lists", lists_path, class: "btn btn-info my-3" %>
