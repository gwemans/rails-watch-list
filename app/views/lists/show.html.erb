<h1><%= @list.name %></h1>


<%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-primary my-3" %>

<div classs="movies-container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="movie-card"><%= bookmark.movie.title %> - <%= link_to 'Delete movie', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete '#{bookmark.movie.title}'?"}%></div>
  <% end %>
</div>

<div class="back-link">
  <%= link_to "Back to Lists", lists_path %>
</div>
